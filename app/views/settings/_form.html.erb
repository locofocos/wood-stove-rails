<%= form_with(model: settings) do |form| %>
  <% if settings.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(settings.errors.count, "error") %> prohibited this settings from being saved:</h2>

      <ul>
        <% settings.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Static temp factor (fix temperature reading off when the temp is staying steady)", style: "display: block" %>
    <%= form.number_field :static_temp_factor %>
  </div>

  <div>
    <%= form.label "Dynamic temp factor (fix temperature reading when the temp is changing quickly)", style: "display: block" %>
    <%= form.number_field :dynamic_temp_factor %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
