<!DOCTYPE html>
<html>
  <head>
    <title><%= @extra_tab_title %>WoodStove</title>
    <%= if @temperature_emoji %>
      <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22><%= @temperature_emoji %></text></svg>">
    <%= end %>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= yield %>

    <h3 style="margin-top: 32px">Navigation</h3>
    <div style="padding: 8px"><%= link_to "Home", root_path %> </div>
    <div style="padding: 8px"><%= link_to "Temp monitors", temp_monitors_path %> </div>
    <div style="padding: 8px"><%= link_to "Temp readings", temp_readings_path %> </div>
    <div style="padding: 8px"><%= link_to "Settings", settings_index_path %> </div>
  </body>
</html>
