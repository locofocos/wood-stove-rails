
<style>
  .short-number-field {
      width: 60px;
  }
</style>

<%= form_with url: '/confirmed_readings', method: :post do |form| %>
  <%= form.label :confirmed_tempf, "Confirmed temp (F):" %>
  <%= form.number_field :confirmed_tempf, step: 1.0, class: 'short-number-field' %>
  <%= form.submit "Record" %>
  <br>
  <small>(useful when tuning the settings for your stove)</small>
<% end %>

